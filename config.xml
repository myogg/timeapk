<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nocode.workrecord" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>智能工作记录系统</name>
    <description>现代化工业管理平台，记录和统计工件工时</description>
    <author email="support@nocode.com" href="https://nocode.meituan.com">
        NoCode Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />

        <icon src="public/pwa-192x192.png" density="ldpi" />
        <icon src="public/pwa-192x192.png" density="mdpi" />
        <icon src="public/pwa-192x192.png" density="hdpi" />
        <icon src="public/pwa-512x512.png" density="xhdpi" />
        <icon src="public/pwa-512x512.png" density="xxhdpi" />
        <icon src="public/pwa-512x512.png" density="xxxhdpi" />
    </platform>

    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />

    <plugin name="cordova-plugin-statusbar" spec="^4.0.0" />
    <plugin name="cordova-plugin-device" spec="^3.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
</widget>
