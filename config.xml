<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nocode.workrecord" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>智能工作记录系统</name>
    <description>现代化工业管理平台，记录和统计工件工时</description>
    <author email="support@nocode.com" href="https://nocode.meituan.com">
        NoCode Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="android-maxSdkVersion" value="33" />
        
        <icon src="public/pwa-192x192.png" density="ldpi" />
        <icon src="public/pwa-192x192.png" density="mdpi" />
        <icon src="public/pwa-192x192.png" density="hdpi" />
        <icon src="public/pwa-512x512.png" density="xhdpi" />
        <icon src="public/pwa-512x512.png" density="xxhdpi" />
        <icon src="public/pwa-512x512.png" density="xxxhdpi" />
        
        <splash src="public/splash.png" density="port-ldpi" />
        <splash src="public/splash.png" density="port-mdpi" />
        <splash src="public/splash.png" density="port-hdpi" />
        <splash src="public/splash.png" density="port-xhdpi" />
        <splash src="public/splash.png" density="port-xxhdpi" />
        <splash src="public/splash.png" density="port-xxxhdpi" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="SplashScreenBackgroundColor" value="#3B82F6" />
    <preference name="StatusBarBackgroundColor" value="#3B82F6" />
    <preference name="StatusBarStyle" value="lightcontent" />
    
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
</widget>
